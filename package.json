{
  "name": "iconforge-monorepo",
  "private": true,
  "scripts": {
    "build": "pnpm -r run build",
    "test": "vitest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "typecheck": "pnpm -r exec tsc --noEmit",
    "clean": "pnpm -r exec rm -rf dist",
    "prepublish": "pnpm build && pnpm test && pnpm lint",
    "check-all": "pnpm install && pnpm build && pnpm test && pnpm lint"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.1",
    "@typescript-eslint/parser": "^8.48.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  },
  "packageManager": "pnpm@10.24.0",
  "engines": {
    "node": ">=24.10.0"
  },
  "pnpm": {
    "neverBuiltDependencies": []
  }
}
